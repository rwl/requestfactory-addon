<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui"
    xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    xmlns:s="urn:import:__TOP_LEVEL_PACKAGE__.client.scaffold.ui">
    <ui:style>
        .scrollable {
            height: 350px;
            width: 270px;
            border: 1px solid #ccc;
            text-align: left;
        }
    </ui:style>
    <g:HorizontalPanel>
        <g:SimplePanel addStyleNames='{style.scrollable}' ui:field='panel'/>
        <b:ButtonGroup vertical='true'>
            <b:Button icon="ARROW_UP" ui:field="moveToTop"/>
            <b:Button icon="CHEVRON_UP" ui:field="moveUp"/>
            <b:Button icon="REMOVE" ui:field="delete"/>
            <b:Button icon="CHEVRON_DOWN" ui:field="moveDown"/>
            <b:Button icon="ARROW_DOWN" ui:field="moveToBottom"/>
        </b:ButtonGroup>
    </g:HorizontalPanel>
</ui:UiBinder>
