<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder
		xmlns:ui='urn:ui:com.google.gwt.uibinder'
		xmlns:g='urn:import:com.google.gwt.user.client.ui'
		xmlns:c='urn:import:com.google.gwt.user.cellview.client'
		xmlns:b='urn:import:com.github.gwtbootstrap.client.ui'
		xmlns:m='urn:import:com.googlecode.mgwt.ui.client.widget'>

	<ui:style>
		.list {
			border-top: 1px solid #ddd;
		}
	</ui:style>

	<m:LayoutPanel>
        <m:HeaderPanel ui:field="header">
            <m:left>
                <m:HeaderButton backButton='true' ui:field="backButton"/>
            </m:left>
            <m:center>
                <g:HTML ui:field="title"/>
            </m:center>
            <m:right>
                <m:HeaderButton forwardButton="false" ui:field="newButton"/>
            </m:right>
        </m:HeaderPanel>
		<c:SimplePager display='{list}' location='RIGHT'/>
		<m:ScrollPanel scrollingEnabledX='false'>
	        <c:CellList
					ui:field='list'
					addStyleNames='{style.list}'
					pageSize='8'/>
		</m:ScrollPanel>
	</m:LayoutPanel>
</ui:UiBinder>
